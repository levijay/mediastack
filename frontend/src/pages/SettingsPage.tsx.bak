          <div className="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-4 text-center">
            <p className="text-2xl font-bold text-gray-900 dark:text-white">{stats?.series?.total || 0}</p>
            <p className="text-sm text-gray-500 dark:text-gray-400">TV Shows</p>
          </div>
          <div className="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-4 text-center">
            <p className="text-2xl font-bold text-gray-900 dark:text-white">{stats?.movies?.available || 0}</p>
            <p className="text-sm text-gray-500 dark:text-gray-400">Available</p>
          </div>
          <div className="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-4 text-center">
            <p className="text-2xl font-bold text-gray-900 dark:text-white">{indexers?.length || 0}</p>
            <p className="text-sm text-gray-500 dark:text-gray-400">Indexers</p>
          </div>
        </div>

        {/* Tabs */}
        <div className="border-b border-gray-200 dark:border-gray-700">
          <nav className="flex gap-4 -mb-px overflow-x-auto">
            {tabs.map((tab) => (
              <button
                key={tab.id}
                onClick={() => setActiveTab(tab.id as any)}
                className={`flex items-center gap-2 px-4 py-3 text-sm font-medium border-b-2 transition-colors whitespace-nowrap ${
                  activeTab === tab.id
                    ? 'border-primary-500 text-primary-600 dark:text-primary-400'
                    : 'border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300'
                }`}
              >
                <svg className="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d={tab.icon} />
                </svg>
                {tab.label}
              </button>
            ))}
          </nav>
        </div>

        {/* Tab Content */}
        <div className="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700">
          
          {/* Quality Profiles Tab */}
          {activeTab === 'quality' && (
            <div className="p-6">
              {/* Header */}
              <div className="mb-6">
                <h2 className="text-xl font-semibold text-gray-900 dark:text-white">Quality Profiles</h2>
                <p className="text-sm text-gray-500 dark:text-gray-400">Define quality preferences for downloads</p>
              </div>

              {/* Profile Cards Grid */}
              <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
                {qualityProfiles.map((profile) => (
                  <div 
                    key={profile.id}
                    className="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden cursor-pointer hover:border-primary-500 transition-colors group"
                    onClick={() => setEditingProfile(profile)}
                  >
                    {/* Card Header */}
                    <div className="flex items-center justify-between px-4 py-3 bg-gray-50 dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700">
                      <div className="flex items-center gap-2">
                        <div className="w-8 h-8 rounded bg-primary-600 flex items-center justify-center flex-shrink-0">
                          <svg className="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                        </div>
                        <h3 className="font-medium text-gray-900 dark:text-white truncate">{profile.name}</h3>
                      </div>
                      <button
                        onClick={(e) => {
                          e.stopPropagation();
                          setDeleteProfileConfirm(profile);
                        }}
                        className="p-1.5 text-gray-400 hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/30 rounded opacity-0 group-hover:opacity-100 transition-all"
                        title="Delete profile"
                      >
                        <svg className="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" strokeWidth={2}>
                          <path strokeLinecap="round" strokeLinejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      </button>
                    </div>
                    {/* Card Body */}
                    <div className="p-4">
                      <div className="text-sm text-gray-600 dark:text-gray-400 mb-2">
                        Cutoff: <span className="font-medium text-gray-900 dark:text-white">{profile.cutoff_quality}</span>
                      </div>
                      <div className="text-xs text-gray-500 dark:text-gray-500 mb-3">
                        {profile.upgrade_allowed ? '✓ Upgrades allowed' : '✗ No upgrades'}
                      </div>
                      <div className="flex flex-wrap gap-1">
                        {profile.items.filter(i => i.allowed).slice(0, 4).map((item, idx) => (
                          <span key={idx} className={`px-2 py-0.5 text-xs rounded ${
                            item.quality === profile.cutoff_quality 
                              ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400' 
                              : 'bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300'
                          }`}>
                            {item.quality}
                          </span>
                        ))}
                        {profile.items.filter(i => i.allowed).length > 4 && (
                          <span className="px-2 py-0.5 text-xs rounded bg-gray-100 dark:bg-gray-700 text-gray-500">
                            +{profile.items.filter(i => i.allowed).length - 4}
                          </span>
                        )}
                      </div>
                    </div>
                  </div>
                ))}

                {/* Add New Profile Card */}
                <div 
                  className="bg-gray-50 dark:bg-gray-800/50 rounded-lg border-2 border-dashed border-gray-300 dark:border-gray-600 p-4 flex items-center justify-center cursor-pointer hover:border-primary-500 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors min-h-[160px]"
                  onClick={() => setShowAddProfile(true)}
                >
                  <div className="text-center">
                    <div className="w-10 h-10 rounded-lg bg-gray-200 dark:bg-gray-700 flex items-center justify-center mx-auto mb-2">
                      <svg className="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 4v16m8-8H4" />
                      </svg>
                    </div>
                    <span className="text-sm text-gray-500 dark:text-gray-400">Add Profile</span>
                  </div>
                </div>
              </div>

              <div className="mt-6 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-800">
                <h4 className="font-medium text-blue-800 dark:text-blue-300 mb-2">How Quality Profiles Work</h4>
                <ul className="text-sm text-blue-700 dark:text-blue-400 space-y-1">
                  <li>• <strong>Allowed Qualities:</strong> Only these qualities will be downloaded</li>
                  <li>• <strong>Cutoff:</strong> Once this quality is reached, no upgrades will occur</li>
                  <li>• <strong>Upgrades:</strong> When enabled, better quality releases will replace existing files</li>
                </ul>
              </div>
            </div>
          )}

          {/* Quality Profile Editor Modal */}
          {(editingProfile || showAddProfile) && (
            <QualityProfileEditor
              profile={editingProfile}
              isNew={showAddProfile}
              onSave={() => loadData()}
              onClose={() => {
                setEditingProfile(null);
                setShowAddProfile(false);
              }}
            />
          )}

          {/* Quality Profile Delete Confirmation */}
          <ConfirmModal
            isOpen={!!deleteProfileConfirm}
            title="Delete Quality Profile"
            message={`Are you sure you want to delete "${deleteProfileConfirm?.name}"? This action cannot be undone.`}
            confirmText="Delete"
            onConfirm={async () => {
              if (deleteProfileConfirm) {
                try {
                  await api.deleteQualityProfile(deleteProfileConfirm.id);
                  addToast({ message: 'Quality profile deleted', type: 'success' });
                  loadData();
                } catch (error) {
                  addToast({ message: 'Failed to delete profile', type: 'error' });
                }
              }
              setDeleteProfileConfirm(null);
            }}
            onCancel={() => setDeleteProfileConfirm(null)}
          />

          {/* Media Management Tab with Sub-tabs */}
          {activeTab === 'naming' && (
            <MediaManagementTab 
              namingConfig={namingConfig}
              setNamingConfig={setNamingConfig}
              namingPreview={namingPreview}
              setNamingPreview={setNamingPreview}
              moviePath={moviePath}
              setMoviePath={setMoviePath}
              tvPath={tvPath}
              setTvPath={setTvPath}
              browsingFor={browsingFor}
              setBrowsingFor={setBrowsingFor}
              handleSavePaths={handleSavePaths}
              addToast={addToast}
            />
          )}

          {/* Indexers Tab */}
          {activeTab === 'indexers' && (
            <div className="p-6">
              <IndexersManager 
                onToast={(message, type) => addToast({ type, message })}
              />
            </div>
          )}

          {/* Download Clients Tab */}
          {activeTab === 'downloads' && (
            <div className="p-6">
              <DownloadClientsManager 
                onToast={(message, type) => addToast({ type, message })}
              />
            </div>
          )}

          {/* Import Lists Tab */}
          {activeTab === 'lists' && (
            <div className="p-6">
              <ImportListsSection 
                onToast={(message, type) => addToast({ type, message })}
              />
            </div>
          )}

          {/* Import Tab */}
          {activeTab === 'import' && (
            <div className="p-6">
              <ImportSection 
                onToast={(message, type) => addToast({ type, message })}
                initialMediaType={searchParams.get('type') === 'tv' ? 'tv' : searchParams.get('type') === 'movie' ? 'movie' : undefined}
              />
            </div>
          )}

          {/* API Keys Tab */}
          {activeTab === 'api' && (
            <div className="p-6 space-y-6">
              <div>
                <h2 className="text-xl font-semibold text-gray-900 dark:text-white">API Keys</h2>
                <p className="text-sm text-gray-500 dark:text-gray-400 mt-1">
                  Test your API key before saving. The test searches for "Stranger Things" to verify the connection.
                </p>
              </div>

              {/* TMDB */}
              <div className="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-800">
                <label className="font-medium text-gray-900 dark:text-white block mb-2">
                  TMDB API Key <span className="text-xs text-blue-600">(Movies & TV Search)</span>
                </label>
                <div className="flex gap-2">
                  <Input 
                    type="password" 
                    value={tmdbApiKey} 
                    onChange={(e) => {
                      setTmdbApiKey(e.target.value);
                      setTmdbTestResult(null);
                    }} 
                    placeholder="Enter TMDB API key" 
                    className="flex-1 dark:bg-gray-700" 
                  />
                  <Button 
                    variant="secondary" 
                    onClick={handleTestTmdb} 
                    disabled={testingTmdb || !tmdbApiKey.trim()}
                  >
                    {testingTmdb ? 'Testing...' : 'Test'}
                  </Button>
                  <Button 
                    onClick={handleSaveTmdb} 
                    disabled={testingTmdb || !tmdbTestResult?.valid}
                    className={!tmdbTestResult?.valid ? 'opacity-50' : ''}
                  >
                    Save
                  </Button>
                </div>
                {tmdbTestResult && (
                  <div className={`mt-3 p-3 rounded-lg flex items-center gap-2 ${
                    tmdbTestResult.valid 
                      ? 'bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-400' 
                      : 'bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400'
                  }`}>
                    {tmdbTestResult.valid ? (
                      <svg className="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
                      </svg>
                    ) : (
                      <svg className="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    )}
                    <span className="text-sm">{tmdbTestResult.message}</span>
                  </div>
                )}
                <p className="mt-2 text-sm text-gray-600 dark:text-gray-400">
                  Get your API key from <a href="https://www.themoviedb.org/settings/api" target="_blank" rel="noopener noreferrer" className="text-primary-600 hover:underline">TMDB API Settings</a>
                </p>
              </div>

              {/* TVDB */}
              <div className="p-4 bg-purple-50 dark:bg-purple-900/20 rounded-lg border border-purple-200 dark:border-purple-800">
                <label className="font-medium text-gray-900 dark:text-white block mb-2">
                  TVDB API Key <span className="text-xs text-purple-600">(TV Episode Data)</span>
                </label>
                <div className="flex gap-2">
                  <Input 
                    type="password" 
                    value={tvdbApiKey} 
                    onChange={(e) => {
                      setTvdbApiKey(e.target.value);
                      setTvdbTestResult(null);
                    }} 
                    placeholder="Enter TVDB API key" 
                    className="flex-1 dark:bg-gray-700" 
                  />
                  <Button 
                    variant="secondary" 
                    onClick={handleTestTvdb} 
                    disabled={testingTvdb || !tvdbApiKey.trim()}
                  >
                    {testingTvdb ? 'Testing...' : 'Test'}
                  </Button>
                  <Button 
                    onClick={handleSaveTvdb} 
                    disabled={testingTvdb || !tvdbTestResult?.valid}
                    className={!tvdbTestResult?.valid ? 'opacity-50' : ''}
                  >
                    Save
                  </Button>
                </div>
                {tvdbTestResult && (
                  <div className={`mt-3 p-3 rounded-lg flex items-center gap-2 ${
                    tvdbTestResult.valid 
                      ? 'bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-400' 
                      : 'bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400'
                  }`}>
                    {tvdbTestResult.valid ? (
                      <svg className="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
                      </svg>
                    ) : (
                      <svg className="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    )}
                    <span className="text-sm">{tvdbTestResult.message}</span>
                  </div>
                )}
                <p className="mt-2 text-sm text-gray-600 dark:text-gray-400">
                  Get your API key from <a href="https://thetvdb.com/api-information" target="_blank" rel="noopener noreferrer" className="text-primary-600 hover:underline">TVDB API Information</a>. 
                  <span className="block mt-1 text-xs text-gray-500">Note: TVDB is used for episode data. TV show search uses TMDB for better English title support.</span>
                </p>
              </div>
            </div>
          )}

          {/* UI Settings Tab */}
          {activeTab === 'ui' && (
            <div className="p-6 space-y-6">
              <h2 className="text-xl font-semibold text-gray-900 dark:text-white">UI Settings</h2>
              
              {/* Theme Selector */}
              <div>
                <div className="flex items-center justify-between mb-3">
                  <label className="block text-sm font-medium text-gray-700 dark:text-gray-300">Theme</label>
                  <Button 
                    variant="secondary" 
                    onClick={() => setShowThemeEditor(true)}
                    className="text-sm"
                  >
                    {uiSettings.customTheme ? 'Edit Custom Theme' : 'Create Custom Theme'}
                  </Button>
                </div>
                <div className="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
                  {/* Custom Theme (if exists) */}
                  {uiSettings.customTheme && (
                    <div
                      className={`relative group p-3 rounded-lg border-2 transition-all text-left cursor-pointer ${
                        uiSettings.theme === 'custom'
                          ? 'border-primary-500 bg-primary-50 dark:bg-primary-900/20'
                          : 'border-gray-200 dark:border-gray-700 hover:border-gray-300 dark:hover:border-gray-600'
                      }`}
                      onClick={() => updateUISettings({ theme: 'custom' })}
                    >
                      <div className="flex items-center gap-2 mb-2">
                        <div className="flex gap-1">
                          <div className="w-4 h-4 rounded-full border border-gray-300 dark:border-gray-600" style={{ background: uiSettings.customTheme.navbarBg }}></div>
                          <div className="w-4 h-4 rounded-full border border-gray-300 dark:border-gray-600" style={{ background: uiSettings.customTheme.background }}></div>
                          <div className="w-4 h-4 rounded-full border border-gray-300 dark:border-gray-600" style={{ background: uiSettings.customTheme.cardBg }}></div>
                        </div>
                      </div>
                      <p className="font-medium text-sm text-gray-900 dark:text-white">Custom Theme</p>
                      <p className="text-xs text-gray-500 dark:text-gray-400 line-clamp-1">{uiSettings.customTheme.isDark ? 'Dark theme' : 'Light theme'}</p>
                      {/* Delete button */}
                      <button
                        onClick={(e) => {
                          e.stopPropagation();
                          setShowDeleteThemeConfirm(true);
                        }}
                        className="absolute top-1 right-1 p-1.5 text-gray-400 hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/30 rounded opacity-0 group-hover:opacity-100 transition-all"
                        title="Delete custom theme"
                      >
                        <svg className="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" strokeWidth={2}>
                          <path strokeLinecap="round" strokeLinejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      </button>
                    </div>
                  )}
                  
                  {/* Built-in Themes */}
                  {themes.map((theme) => (
                    <div
                      key={theme.id}
                      className={`relative group p-3 rounded-lg border-2 transition-all text-left cursor-pointer ${
                        uiSettings.theme === theme.id
                          ? 'border-primary-500 bg-primary-50 dark:bg-primary-900/20'
                          : 'border-gray-200 dark:border-gray-700 hover:border-gray-300 dark:hover:border-gray-600'
                      }`}
                      onClick={() => updateUISettings({ theme: theme.id })}
                    >
                      <div className="flex items-center gap-2 mb-2">
                        <div className="flex gap-1">
                          <div className="w-4 h-4 rounded-full border border-gray-300 dark:border-gray-600" style={{ background: theme.navbarBg }}></div>
                          <div className="w-4 h-4 rounded-full border border-gray-300 dark:border-gray-600" style={{ background: theme.background }}></div>
                          <div className="w-4 h-4 rounded-full border border-gray-300 dark:border-gray-600" style={{ background: theme.cardBg }}></div>
                        </div>
                      </div>
                      <p className="font-medium text-sm text-gray-900 dark:text-white">{theme.name}</p>
                      <p className="text-xs text-gray-500 dark:text-gray-400 line-clamp-1">{theme.isDark ? 'Dark theme' : 'Light theme'}</p>
                    </div>
                  ))}
                </div>
              </div>


              {/* Poster Size */}
              <div>
                <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                  Poster Size: {uiSettings.posterSize}/10
                </label>
                <input
                  type="range"
                  min="1"
                  max="10"
                  value={uiSettings.posterSize}
                  onChange={(e) => updateUISettings({ posterSize: Number(e.target.value) })}
                  className="w-full h-2 bg-gray-200 dark:bg-gray-700 rounded-lg appearance-none cursor-pointer accent-primary-500"
                />
                <div className="flex justify-between text-xs text-gray-500 dark:text-gray-400 mt-1">
                  <span>Tiny</span>
                  <span>Small</span>
                  <span>Medium</span>
                  <span>Large</span>
                  <span>Huge</span>
                </div>
                <p className="text-xs text-gray-500 dark:text-gray-400 mt-2">Adjusts poster size on Movies and TV Shows pages</p>
              </div>

              {/* Recently Added Widget */}
              <div>
                <label className="flex items-center gap-3 cursor-pointer">
                  <input
                    type="checkbox"
                    checked={uiSettings.showRecentlyAdded}
                    onChange={(e) => updateUISettings({ showRecentlyAdded: e.target.checked })}
                    className="w-5 h-5 rounded border-gray-300 dark:border-gray-600 text-primary-500 focus:ring-primary-500"
                  />
                  <div>
                    <span className="text-sm font-medium text-gray-900 dark:text-white">Show Recently Added on Dashboard</span>
                    <p className="text-xs text-gray-500 dark:text-gray-400">Display recently added movies and TV shows on the dashboard</p>
                  </div>
                </label>
              </div>

              {/* Toast Settings */}
              <div>
                <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Toast Notification Duration</label>
                <div className="grid grid-cols-2 gap-4">
                  <div>
                    <label className="block text-xs text-gray-500 dark:text-gray-400 mb-1">Default</label>
                    <select value={toastSettings.defaultDuration / 1000} onChange={(e) => updateToastSettings({ defaultDuration: Number(e.target.value) * 1000 })} className="w-full px-3 py-2 text-sm bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white">
                      <option value="3">3 seconds</option>
                      <option value="5">5 seconds</option>
                      <option value="8">8 seconds</option>
                      <option value="10">10 seconds</option>
                      <option value="15">15 seconds</option>
                    </select>
                  </div>
                  <div>
                    <label className="block text-xs text-gray-500 dark:text-gray-400 mb-1">Errors</label>
                    <select value={toastSettings.errorDuration / 1000} onChange={(e) => updateToastSettings({ errorDuration: Number(e.target.value) * 1000 })} className="w-full px-3 py-2 text-sm bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white">
                      <option value="5">5 seconds</option>
                      <option value="8">8 seconds</option>
                      <option value="10">10 seconds</option>
                      <option value="15">15 seconds</option>
                      <option value="20">20 seconds</option>
                    </select>
                  </div>
                </div>
                <p className="text-xs text-gray-500 dark:text-gray-400 mt-2">Controls how long notification toasts stay visible.</p>
              </div>
            </div>
          )}

          {/* Workers Tab */}
          {activeTab === 'jobs' && (
            <WorkersTab />
          )}
        </div>
      </div>

      {/* Custom Theme Delete Confirmation */}
      <ConfirmModal
        isOpen={showDeleteThemeConfirm}
        title="Delete Custom Theme"
        message="Are you sure you want to delete your custom theme? This action cannot be undone."
        confirmText="Delete"
        onConfirm={() => {
          deleteCustomTheme();
          setShowDeleteThemeConfirm(false);
          addToast({ type: 'success', message: 'Custom theme deleted' });
        }}
        onCancel={() => setShowDeleteThemeConfirm(false)}
      />

      {/* Theme Editor Modal */}
      {showThemeEditor && (
        <ThemeEditor
          currentTheme={currentTheme}
          onSave={(theme) => {
            saveCustomTheme(theme);
            setShowThemeEditor(false);
            addToast({ type: 'success', message: 'Custom theme saved!' });
          }}
          onCancel={() => setShowThemeEditor(false)}
        />
      )}
    </Layout>
  );
}
