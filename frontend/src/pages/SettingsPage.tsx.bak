interface QualityProfile {
  id: string;
  name: string;
  cutoff_quality: string;
  upgrade_allowed: boolean;
  items: { quality: string; allowed: boolean }[];
}

interface NamingConfig {
  rename_movies: boolean;
  rename_episodes: boolean;
  replace_illegal_characters: boolean;
  colon_replacement: string;
  standard_movie_format: string;
  movie_folder_format: string;
  standard_episode_format: string;
  daily_episode_format: string;
  anime_episode_format: string;
  series_folder_format: string;
  season_folder_format: string;
  specials_folder_format: string;
  multi_episode_style: string;
}

interface Worker {
  id: string;
  name: string;
  description: string;
  status: 'running' | 'stopped' | 'error';
  lastRun?: string;
  interval?: number;
  errorMessage?: string;
}

interface MediaManagementTabProps {
  namingConfig: NamingConfig | null;
  setNamingConfig: (config: NamingConfig) => void;
  namingPreview: { movie?: string; episode?: string };
  setNamingPreview: (preview: { movie?: string; episode?: string }) => void;
  moviePath: string;
  setMoviePath: (path: string) => void;
  tvPath: string;
  setTvPath: (path: string) => void;
  browsingFor: 'movie' | 'tv' | null;
  setBrowsingFor: (type: 'movie' | 'tv' | null) => void;
  handleSavePaths: () => void;
  addToast: (toast: { type: 'info' | 'success' | 'warning' | 'error' | 'progress'; message: string }) => void;
}

function MediaManagementTab(props: MediaManagementTabProps) {
  const [subTab, setSubTab] = useState<'naming' | 'library'>('naming');
  
  const subTabs = [
    { id: 'naming', label: 'File Naming' },
    { id: 'library', label: 'Library Paths' },
  ];

  return (
    <div>
      {/* Sub-tabs */}
      <div className="border-b border-gray-200 dark:border-gray-700 px-6 pt-4">
        <div className="flex gap-4">
          {subTabs.map((tab) => (
            <button
              key={tab.id}
              onClick={() => setSubTab(tab.id as any)}
              className={`pb-3 px-1 text-sm font-medium border-b-2 transition-colors ${
                subTab === tab.id
                  ? 'border-primary-500 text-primary-600 dark:text-primary-400'
                  : 'border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300'
              }`}
            >
              {tab.label}
            </button>
          ))}
        </div>
      </div>

      {/* Naming Sub-tab */}
      {subTab === 'naming' && (
        <div className="p-6">
          {props.namingConfig && (
            <NamingSettings
              config={props.namingConfig}
              onChange={props.setNamingConfig}
              onSave={async () => {
                try {
                  await api.updateNamingConfig(props.namingConfig!);
                  props.addToast({ type: 'success', message: 'Naming configuration saved!' });
                  const [moviePreview, episodePreview] = await Promise.all([
                    api.previewNaming('movie'),
                    api.previewNaming('episode')
                  ]);
                  props.setNamingPreview({
                    movie: moviePreview.preview,
                    episode: episodePreview.preview
                  });
                } catch (error) {
                  props.addToast({ type: 'error', message: 'Failed to save naming configuration' });
                }
              }}
              moviePreview={props.namingPreview.movie}
              episodePreview={props.namingPreview.episode}
            />
          )}
        </div>
      )}

      {/* Library Paths Sub-tab */}
      {subTab === 'library' && (
        <div className="p-6 space-y-4">
          <div>
            <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Movies Path</label>
            <div className="flex items-stretch gap-2">
              <Input type="text" value={props.moviePath} onChange={(e) => props.setMoviePath(e.target.value)} placeholder="/data/media/movies" className="dark:bg-gray-700 flex-1" />
              <Button variant="secondary" onClick={() => props.setBrowsingFor('movie')} className="flex items-center">
                <svg className="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                </svg>
                Browse
              </Button>
            </div>
          </div>
          <div>
            <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">TV Shows Path</label>
            <div className="flex items-stretch gap-2">
              <Input type="text" value={props.tvPath} onChange={(e) => props.setTvPath(e.target.value)} placeholder="/data/media/tv" className="dark:bg-gray-700 flex-1" />
              <Button variant="secondary" onClick={() => props.setBrowsingFor('tv')} className="flex items-center">
                <svg className="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                </svg>
                Browse
              </Button>
            </div>
          </div>
          <Button onClick={props.handleSavePaths}>Save Paths</Button>
        </div>
      )}

      {/* Folder Browser Modal */}
      {props.browsingFor && (
        <FolderBrowser
          currentPath={props.browsingFor === 'movie' ? props.moviePath : props.tvPath}
          onSelect={(path) => {
            if (props.browsingFor === 'movie') {
              props.setMoviePath(path);
            } else {
              props.setTvPath(path);
            }
          }}
          onClose={() => props.setBrowsingFor(null)}
        />
      )}
    </div>
  );
}

function WorkersTab() {
  const [workers, setWorkers] = useState<Worker[]>([]);
  const [loading, setLoading] = useState(true);
  const [actionLoading, setActionLoading] = useState<string | null>(null);
  const { addToast } = useToast();

  useEffect(() => {
    loadWorkers();
    // Refresh every 5 seconds
    const interval = setInterval(loadWorkers, 5000);
    return () => clearInterval(interval);
  }, []);

  const loadWorkers = async () => {
    try {
      const data = await api.getWorkers();
      setWorkers(data);
    } catch (error) {
      console.error('Failed to load workers:', error);
    } finally {
      setLoading(false);
    }
  };

  const handleStart = async (id: string) => {
    setActionLoading(id);
    try {
      await api.startWorker(id);
      addToast({ type: 'success', message: 'Worker started' });
      await loadWorkers();
    } catch (error) {
      addToast({ type: 'error', message: 'Failed to start worker' });
    } finally {
      setActionLoading(null);
    }
  };

  const handleStop = async (id: string) => {
    setActionLoading(id);
    try {
      await api.stopWorker(id);
      addToast({ type: 'success', message: 'Worker stopped' });
      await loadWorkers();
    } catch (error) {
      addToast({ type: 'error', message: 'Failed to stop worker' });
    } finally {
      setActionLoading(null);
    }
  };

  const handleRestart = async (id: string) => {
    setActionLoading(id);
    try {
      await api.restartWorker(id);
      addToast({ type: 'success', message: 'Worker restarted' });
      await loadWorkers();
    } catch (error) {
      addToast({ type: 'error', message: 'Failed to restart worker' });
    } finally {
      setActionLoading(null);
    }
  };

  const formatInterval = (ms?: number) => {
    if (!ms) return 'Manual';
    if (ms < 60000) return `${ms / 1000}s`;
    if (ms < 3600000) return `${ms / 60000}m`;
    return `${ms / 3600000}h`;
  };

  const formatLastRun = (lastRun?: string) => {
    if (!lastRun) return 'Never';
    const date = new Date(lastRun);
    const now = new Date();
    const diff = now.getTime() - date.getTime();
    if (diff < 60000) return 'Just now';
    if (diff < 3600000) return `${Math.floor(diff / 60000)}m ago`;
    if (diff < 86400000) return `${Math.floor(diff / 3600000)}h ago`;
    return date.toLocaleString();
  };

  if (loading) {
    return (
      <div className="p-6 text-center text-gray-500 dark:text-gray-400">
        Loading workers...
      </div>
    );
  }

  return (
    <div className="p-6 space-y-6">
      {/* Header */}
      <div className="mb-6">
        <h2 className="text-xl font-semibold text-gray-900 dark:text-white">Jobs</h2>
        <p className="text-sm text-gray-500 dark:text-gray-400">Manage background tasks that run automatically</p>
      </div>

      {/* Workers List */}
      <div className="space-y-4">
        {workers.map((worker) => (
          <div
            key={worker.id}
            className="bg-gray-50 dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700 p-4"
          >
            <div className="flex items-start justify-between">
              <div className="flex-1">
                <div className="flex items-center gap-3">
                  <h3 className="text-lg font-medium text-gray-900 dark:text-white">{worker.name}</h3>
                  <span className={`px-2 py-0.5 text-xs rounded-full ${
                    worker.status === 'running' 
                      ? 'bg-green-100 dark:bg-green-900/40 text-green-700 dark:text-green-300'
                      : worker.status === 'error'
                      ? 'bg-red-100 dark:bg-red-900/40 text-red-700 dark:text-red-300'
                      : 'bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300'
                  }`}>
                    {worker.status === 'running' && (
                      <span className="inline-block w-1.5 h-1.5 bg-green-500 rounded-full mr-1.5 animate-pulse"></span>
                    )}
                    {worker.status.charAt(0).toUpperCase() + worker.status.slice(1)}
                  </span>
                </div>
                <p className="mt-1 text-sm text-gray-600 dark:text-gray-400">{worker.description}</p>
                <div className="mt-2 flex items-center gap-4 text-xs text-gray-500 dark:text-gray-400">
                  <span>Interval: {formatInterval(worker.interval)}</span>
                  <span>Last run: {formatLastRun(worker.lastRun)}</span>
                </div>
                {worker.errorMessage && (
                  <p className="mt-2 text-sm text-red-600 dark:text-red-400">Error: {worker.errorMessage}</p>
                )}
              </div>
              <div className="flex items-center gap-2 ml-4">
                {worker.status === 'running' ? (
                  <>
                    <button
                      onClick={() => handleStop(worker.id)}
                      disabled={actionLoading === worker.id}
                      className="px-3 py-1.5 text-sm bg-red-100 dark:bg-red-900/40 text-red-700 dark:text-red-300 rounded-lg hover:bg-red-200 dark:hover:bg-red-900/60 disabled:opacity-50"
                    >
                      {actionLoading === worker.id ? 'Stopping...' : 'Stop'}
                    </button>
                    <button
                      onClick={() => handleRestart(worker.id)}
                      disabled={actionLoading === worker.id}
                      className="px-3 py-1.5 text-sm bg-yellow-100 dark:bg-yellow-900/40 text-yellow-700 dark:text-yellow-300 rounded-lg hover:bg-yellow-200 dark:hover:bg-yellow-900/60 disabled:opacity-50"
                    >
                      {actionLoading === worker.id ? 'Restarting...' : 'Restart'}
                    </button>
                  </>
                ) : (
                  <button
                    onClick={() => handleStart(worker.id)}
                    disabled={actionLoading === worker.id}
                    className="px-3 py-1.5 text-sm bg-green-100 dark:bg-green-900/40 text-green-700 dark:text-green-300 rounded-lg hover:bg-green-200 dark:hover:bg-green-900/60 disabled:opacity-50"
                  >
                    {actionLoading === worker.id ? 'Starting...' : 'Start'}
                  </button>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>

      {workers.length === 0 && (
        <div className="text-center py-8 text-gray-500 dark:text-gray-400">
          No background workers configured
        </div>
      )}
    </div>
  );
}

export function SettingsPage() {
  const { addToast, settings: toastSettings, updateSettings: updateToastSettings } = useToast();
  const { settings: uiSettings, updateSettings: updateUISettings, currentTheme, saveCustomTheme, deleteCustomTheme } = useUISettings();
  const [searchParams] = useSearchParams();
  const [stats, setStats] = useState<any>(null);
  const [loading, setLoading] = useState(true);
  
  // Read tab from URL parameter, default to 'ui'
  const urlTab = searchParams.get('tab') as 'ui' | 'naming' | 'quality' | 'indexers' | 'downloads' | 'lists' | 'import' | 'api' | 'jobs' | null;
  const [activeTab, setActiveTab] = useState<'ui' | 'naming' | 'quality' | 'indexers' | 'downloads' | 'lists' | 'import' | 'api' | 'jobs'>(urlTab || 'ui');

  // Update tab when URL changes
  useEffect(() => {
    if (urlTab && ['ui', 'naming', 'quality', 'indexers', 'downloads', 'lists', 'import', 'api', 'jobs'].includes(urlTab)) {
      setActiveTab(urlTab);
    }
  }, [urlTab]);

  // Theme Editor
  const [showThemeEditor, setShowThemeEditor] = useState(false);

  // API Keys
  const [tmdbApiKey, setTmdbApiKey] = useState('');
  const [tvdbApiKey, setTvdbApiKey] = useState('');
  const [testingTmdb, setTestingTmdb] = useState(false);
  const [testingTvdb, setTestingTvdb] = useState(false);
  const [tmdbTestResult, setTmdbTestResult] = useState<{ valid: boolean; message: string } | null>(null);
  const [tvdbTestResult, setTvdbTestResult] = useState<{ valid: boolean; message: string } | null>(null);

  // Media Paths
  const [moviePath, setMoviePath] = useState('/data');
  const [tvPath, setTvPath] = useState('/data');
  const [browsingFor, setBrowsingFor] = useState<'movie' | 'tv' | null>(null);

  // Indexers (for stats display)
  const [indexers, setIndexers] = useState<any[]>([]);

  // Quality Profiles
  const [qualityProfiles, setQualityProfiles] = useState<QualityProfile[]>([]);
  const [editingProfile, setEditingProfile] = useState<QualityProfile | null>(null);
  const [showAddProfile, setShowAddProfile] = useState(false);
  const [deleteProfileConfirm, setDeleteProfileConfirm] = useState<QualityProfile | null>(null);
  const [showDeleteThemeConfirm, setShowDeleteThemeConfirm] = useState(false);

  // Naming Configuration
  const [namingConfig, setNamingConfig] = useState<NamingConfig | null>(null);
  const [namingPreview, setNamingPreview] = useState<{ movie?: string; episode?: string }>({});

  useEffect(() => {
    loadData();
  }, []);

  const loadData = async () => {
    try {
      const [statsData, settingsData, indexersData, profilesData, namingData] = await Promise.all([
        api.getLibraryStats(),
        api.getSettings(),
        api.getIndexers(),
        api.getQualityProfiles().catch(() => []),
        api.getNamingConfig().catch(() => null)
      ]);
      setStats(statsData);
      setIndexers(indexersData || []);
      setQualityProfiles(profilesData || []);
      setNamingConfig(namingData);
      
      if (settingsData) {
        setTmdbApiKey(settingsData.tmdb_api_key || '');
        setTvdbApiKey(settingsData.tvdb_api_key || '');
        setMoviePath(settingsData.movie_path || '/data/media/movies');
        setTvPath(settingsData.tv_path || '/data/media/tv');
      }

      // Load naming preview
      if (namingData) {
        const [moviePreview, episodePreview] = await Promise.all([
          api.previewNaming('movie').catch(() => ({ preview: '' })),
          api.previewNaming('episode').catch(() => ({ preview: '' }))
        ]);
        setNamingPreview({
          movie: moviePreview.preview,
          episode: episodePreview.preview
        });
      }
    } catch (error) {
      console.error('Failed to load data:', error);
    } finally {
      setLoading(false);
    }
  };

  const handleTestTmdb = async () => {
    if (!tmdbApiKey.trim()) {
      addToast({ type: 'warning', message: 'Please enter an API key' });
      return;
    }
    setTestingTmdb(true);
    setTmdbTestResult(null);
    try {
      const result = await api.testTmdbKey(tmdbApiKey);
      setTmdbTestResult(result);
      if (result.valid) {
        addToast({ type: 'success', message: result.message || 'TMDB API key is valid!' });
      } else {
        addToast({ type: 'error', message: result.message || 'Invalid API key' });
      }
    } catch (error: any) {
      setTmdbTestResult({ valid: false, message: error.response?.data?.message || 'Test failed' });
      addToast({ type: 'error', message: 'Failed to test API key' });
    } finally {
      setTestingTmdb(false);
    }
  };

  const handleSaveTmdb = async () => {
    if (!tmdbApiKey.trim()) {
      addToast({ type: 'warning', message: 'Please enter an API key' });
      return;
    }
    if (!tmdbTestResult?.valid) {
      addToast({ type: 'warning', message: 'Please test the API key first' });
      return;
    }
    setTestingTmdb(true);
    try {
      await api.updateSetting('tmdb_api_key', tmdbApiKey);
      addToast({ type: 'success', message: 'TMDB API key saved!' });
    } catch (error: any) {
      addToast({ type: 'error', message: error.response?.data?.error || 'Failed to save API key' });
    } finally {
      setTestingTmdb(false);
    }
  };

  const handleTestTvdb = async () => {
    if (!tvdbApiKey.trim()) {
      addToast({ type: 'warning', message: 'Please enter an API key' });
      return;
